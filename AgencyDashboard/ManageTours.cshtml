@model IEnumerable<TourBuddy.Models.Tour>

@{
    ViewData["Title"] = "Manage Tours";
}

<section class="dashboard-section">
    <div class="container">
        <div class="page-actions-header" data-aos="fade-up">
            <div class="header-text">
                <h1>Manage Your Tours</h1>
                <p>Here you can edit, view, or create new tour packages.</p>
            </div>
            <a asp-action="CreateTour" class="cta-button"><i class="fas fa-plus"></i> Create New Tour</a>
        </div>

        <div class="dashboard-block" data-aos="fade-up" data-aos-delay="100">
            <div class="table-responsive">
                <table class="dashboard-table">
                    <thead>
                        <tr>
                            <th>Tour Name</th>
                            <th>Price</th>
                            <th>Bookings</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tour in Model)
                        {
                            <tr>
                                <td>@tour.Name</td>
                                <td>$@tour.Price.ToString("F2")</td>
                                <td>0</td>
                                <td><span class="status-pill published">Published</span></td>
                                <td class="action-buttons">
                                    <a asp-controller="Tours" asp-action="Details" asp-route-id="@tour.Id" class="btn-icon view" title="View"><i class="fas fa-eye"></i></a>
                                    <a asp-action="EditTour" asp-route-id="@tour.Id" class="btn-icon edit" title="Edit"><i class="fas fa-pencil-alt"></i></a>

                                    <form asp-action="DeleteTour" asp-route-id="@tour.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn-icon delete" title="Delete" onclick="return confirm('Are you sure you want to delete this tour? This cannot be undone.');">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>