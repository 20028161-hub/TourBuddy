@{
    ViewData["Title"] = "My Bookings";
    var upcomingBookings = ViewBag.UpcomingBookings as List<TourBuddy.Models.Booking>;
    var pastBookings = ViewBag.PastBookings as List<TourBuddy.Models.Booking>;
}

<style>
    .booking-card-full {
        display: flex;
        flex-wrap: wrap;
        background: #fff;
        border: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
        overflow: hidden;
    }

    .booking-card-image {
        flex: 0 0 250px;
        height:200px;
        position: relative;
    }

        .booking-card-image img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

    .trip-status {
        position: absolute;
        top: 10px;
        left: 10px;
        padding: 5px 12px;
        font-size: 0.8rem;
        font-weight: 700;
        color: #fff;
        text-transform: uppercase;
    }

        .trip-status.confirmed {
            background-color: #28a745;
        }

        .trip-status.completed {
            background-color: #6c757d;
        }

    .booking-card-details {
        flex: 1 1 300px;
        padding: 25px;
    }

    .booking-card-actions {
        padding: 25px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 10px;
    }

    .details-grid {
        display: grid;
        gap: 8px;
        margin-top: 15px;
        color: var(--secondary-color);
    }

        .details-grid span i {
            margin-right: 8px;
            width: 15px;
            text-align: center;
        }

    @@media (max-width: 768px) {
        .booking-card-image, .booking-card-actions {
            flex-basis: 100%;
        }

        .booking-card-actions {
            flex-direction: row;
        }
    }
</style>

<section class="dashboard-section">
    <div class="container">
        <div class="dashboard-header">
            <h1>My Bookings</h1>
            <p>Manage your upcoming trips and view your travel history.</p>
        </div>

        <div class="dashboard-block">
            <h2><i class="fas fa-plane-departure"></i> Upcoming Bookings</h2>
            @if (upcomingBookings != null && upcomingBookings.Any())
            {
                foreach (var booking in upcomingBookings)
                {
                    var firstImageUrl = booking.Tour.ImageUrls?.Split(',').FirstOrDefault()?.Trim();
                    <div class="booking-card-full">
                        <div class="booking-card-image">
                            <img src="@firstImageUrl" alt="@booking.Tour.Name">
                            <div class="trip-status confirmed">@booking.Status</div>
                        </div>
                        <div class="booking-card-details">
                            <h3>@booking.Tour.Name</h3>
                            <div class="details-grid">
                                <span><i class="fas fa-calendar-check"></i> Date: @booking.TourDate.ToLongDateString()</span>
                                <span><i class="fas fa-users"></i> Guests: @booking.NumberOfGuests</span>
                                <span><i class="fas fa-hashtag"></i> ID: TB-@booking.Id.ToString("D6")</span>
                            </div>
                        </div>
                        <div class="booking-card-actions">
                            <a asp-action="BookingDetails" asp-route-id="@booking.Id" class="btn-action">View Details</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>You have no upcoming bookings.</p>
            }
        </div>

        <div class="dashboard-block" style="margin-top:40px">
            <h2><i class="fas fa-history"></i> Past Bookings</h2>
            @if (pastBookings != null && pastBookings.Any())
            {
                foreach (var booking in pastBookings)
                {
                    var firstImageUrl = booking.Tour.ImageUrls?.Split(',').FirstOrDefault()?.Trim();
                    <div class="booking-card-full">
                        <div class="booking-card-image">
                            <img src="@firstImageUrl" alt="@booking.Tour.Name">
                            <div class="trip-status completed">@booking.Status</div>
                        </div>
                        <div class="booking-card-details">
                            <h3>@booking.Tour.Name</h3>
                            <div class="details-grid">
                                <span><i class="fas fa-calendar-check"></i> Date: @booking.TourDate.ToLongDateString()</span>
                                <span><i class="fas fa-users"></i> Guests: @booking.NumberOfGuests</span>
                            </div>
                        </div>
                        <div class="booking-card-actions">
                            <a asp-action="LeaveReview" asp-route-bookingId="@booking.Id" class="btn-action">Leave a Review</a>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>You have no past bookings.</p>
            }
        </div>
    </div>
</section>